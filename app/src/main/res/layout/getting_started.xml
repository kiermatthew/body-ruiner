<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GettingStarted">

    <TextView
        android:id="@+id/titleGS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/poppins_medium"
        android:text="You're Almost There!"
        android:textSize="23sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desciptionGS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Please provide the following details"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleGS" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desciptionGS">

        <EditText
            android:id="@+id/nameSignup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="253dp" />

        <EditText
            android:id="@+id/emailSignup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="318dp" />

        <EditText
            android:id="@+id/passwordSignup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="418dp" />

        <EditText
            android:id="@+id/confirmpwSignup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_input"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="485dp" />

        <Button
            android:id="@+id/continueBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="Continue"
            android:textSize="16sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>